rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // News - anyone can read published, authenticated can write
    match /news/{newsId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Events - anyone can read public events, authenticated can write
    match /events/{eventId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Users - only authenticated users can read/write their own data
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Tasks - only authenticated users
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
    
    // Collaborators - only authenticated users
    match /collaborators/{collaboratorId} {
      allow read, write: if request.auth != null;
    }
  }
}
