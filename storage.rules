rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // News images - anyone can read, authenticated users can write
    match /news/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Events images - anyone can read, authenticated users can write
    match /events/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Default rule - deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
